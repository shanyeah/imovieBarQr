<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/default_background">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

        <ImageView
                android:id="@+id/btn_volume_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/volume_minus"
                android:layout_marginTop="10dp" android:visibility="invisible"/>

        <ImageView
                android:id="@+id/btn_sound"
                android:layout_toRightOf="@id/btn_volume_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sound"
                android:layout_marginTop="-5dp" android:visibility="invisible"/>

        <ImageView
                android:id="@+id/btn_volume_plus"
                android:layout_toRightOf="@id/btn_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/volume_plus"
                android:layout_marginTop="10dp" android:visibility="invisible"/>

        <TextView
                android:id="@+id/play_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18dp" android:textColor="#dd7528"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

        <ImageView
                android:id="@+id/btn_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/prev"/>

        <ImageView
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play"
                android:layout_marginLeft="20dp"/>

        <ImageView
                android:id="@+id/btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stop"
                android:layout_marginLeft="20dp"/>

        <ImageView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

        <TextView
                android:id="@+id/play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp" android:textColor="#dd7528"/>

        <SeekBar
                 android:id="@+id/play_seek_bar"
                 android:layout_width="0dp"
                 android:layout_weight="2"
                 android:layout_height="wrap_content"
                 android:maxHeight="1.0dip"
                 android:minHeight="1.0dip"
                 android:max="100"
                 android:progressDrawable="@drawable/seekbar_style_drawable"
                 android:thumb="@drawable/seekbar_thumb_style"
                 android:thumbOffset="1.0dip"
                 xmlns:android="http://schemas.android.com/apk/res/android" />

        <TextView
                android:id="@+id/left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp" android:textColor="#dd7528"/>

    </LinearLayout>


</LinearLayout>