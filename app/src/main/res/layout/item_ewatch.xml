<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="@dimen/text_padding1">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/empty"
                android:id="@+id/txt_ewatch_name"
                android:gravity="center_vertical" android:textSize="@dimen/config_txt_size"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/empty"
                android:id="@+id/txt_ewatch_sn" android:gravity="center_vertical" android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>