<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/left_background"
              android:orientation="vertical"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/config_title_padding"
            android:paddingRight="@dimen/config_title_padding"
            android:text="包房列表"
            android:textColor="@color/split"
            android:textSize="@dimen/title_font_size"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:paddingTop="2dp"
            android:background="@color/split"/>

    <include layout="@layout/progress" android:layout_width="match_parent" android:layout_height="4dp"/>

    <GridView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:verticalSpacing="@dimen/gird_vertical_spacing"
            android:gravity="center"
            android:background="@drawable/view_bg">
    </GridView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/config_title_padding"
            android:paddingRight="@dimen/config_title_padding"
            android:text="点播记录"
            android:textColor="@color/split"
            android:textSize="@dimen/title_font_size"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:paddingTop="2dp"
            android:background="@color/split"/>

    <ListView
            android:id="@+id/playListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/transparent"></ListView>

</LinearLayout>