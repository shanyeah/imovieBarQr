<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

    <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="@dimen/item_poster_width"
            android:layout_height="@dimen/item_poster_height"
            android:layout_margin="4dp"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:contentDescription="@string/empty"
            android:focusable="false"
            android:maxHeight="250dp"
            android:maxWidth="320dp"
            android:scaleType="fitXY"/>

    <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/ivPoster"
            android:background="#7f000000"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center"
                android:lines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/item_text_size"/>


    </RelativeLayout>

    <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size"
            android:layout_below="@+id/RelativeLayout1"
            android:layout_toRightOf="@id/ivPoster"
            android:ellipsize="end"
            android:focusable="false"
            android:text=""/>
    <TextView
            android:id="@+id/tvTimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size"
            android:layout_below="@+id/txt_description"
            android:layout_toRightOf="@id/ivPoster"
            android:ellipsize="end"
            android:focusable="false"
            android:text=""/>
    <TextView
            android:id="@+id/tvDirectors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size"
            android:layout_below="@+id/tvTimes"
            android:layout_toRightOf="@id/ivPoster"
            android:ellipsize="end"
            android:focusable="false"
            android:text=""/>
    <TextView
            android:id="@+id/tvActors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size"
            android:layout_below="@+id/tvDirectors"
            android:layout_toRightOf="@id/ivPoster"
            android:ellipsize="end"
            android:focusable="false"
            android:text=""/>

    <TextView
            android:id="@+id/tvPlayInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size"
            android:layout_below="@+id/tvActors"
            android:layout_toRightOf="@id/ivPoster"
            android:ellipsize="end"
            android:focusable="false"
            android:text=""/>

    <TextView
            android:id="@+id/play_log_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size"
            android:textColor="#FF7F24"
            android:layout_below="@+id/tvPlayInfo"
            android:layout_toRightOf="@id/ivPoster"/>
</RelativeLayout>