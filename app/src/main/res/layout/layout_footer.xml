<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/footer_background">

    <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/footer_background"
            android:orientation="horizontal" android:paddingRight="20dp">

        <GridView
                android:id="@+id/footer_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:gravity="center"
                android:background="@color/footer_background"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="8dp" android:nextFocusLeft="@id/footer_grid" android:nextFocusRight="@id/footer_grid"/>
    </LinearLayout>
</LinearLayout>